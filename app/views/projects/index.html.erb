<div class="card">
  <div class="card-body">
    <h2 class="card-title d-flex justify-content-between">
      <span>Projects</span>
      <%= link_to 'New Project', new_project_path, class: 'btn btn-primary'%>
    </h2>

    <% @projects.each do |project| %>
      <%= link_to project do %>
        <div class="card">
          <div class="card-body">
            <h5 class='card-title'><%= project.name %>
            <p><%= project.description %></p>
          </div>
        </div>
      <% end %>
    <% end %>

    <table>
      <thead>
        <tr>
          <th>Name</th>
          <th>Description</th>
          <th>User</th>
          <th colspan="3"></th>
        </tr>
      </thead>
  </div>
</div>
<br>
